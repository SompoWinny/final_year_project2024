<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#78DF7C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_information"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/diseaseNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/disease_name"
            android:layout_marginBottom="14dp"
            android:padding="16dp" />



        <EditText
            android:id="@+id/diseaseDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/disease_description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/treatmentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/treatment"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/saveInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/oval_button_background"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
